{
  "private": true,
  "name": "aralects-mono",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter=admin",
    "dev:website": "turbo dev --filter=website",
    "dev:ui": "turbo dev --filter=@repo/ui",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "prepare": "husky",
    "copy": "ts-node copy.ts  ../aralects-mono"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ignore": "^6.0.2"
  },
  "devDependencies": {
    "@prettier/sync": "^0.5.2",
    "@types/node": "^22.9.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.1",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md}": [
      "npx prettier --write --ignore-unknown"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
