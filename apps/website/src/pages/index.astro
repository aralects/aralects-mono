---
import MarqueeStrip from "@components/sections/Home/marquee/MarqueeStrip";
import ArabicAsComunity from "../components/sections/Home/ArabicAsComunity/ArabicAsComunity";
import ExperienceAralects from "../components/sections/Home/ExperienceAralects/ExperienceAralects";
import FAQs from "../components/sections/Home/Faqs/Faqs";
import HeroSection from "../components/sections/Home/HeroSection/HeroSection";
import OurTeam from "../components/sections/Home/ourTeam/OurTeam";
import SocialSidebar from "../components/sections/Home/SocialSidebar/SocialSidebar";
import TextSection from "../components/sections/Home/textSection/TextSection";
import WhyAralects from "../components/sections/Home/WhyAralects/WhyAralects";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <SocialSidebar className="absolute left-4 z-10 top-[200px]" />
  <div class="relative xl:container xl:mx-auto">
    <HeroSection client:visible />
    <TextSection />
    <div class="bg-[#8262b0] bg-opacity-90 rounded-t-[2rem]">
      <WhyAralects />
      <ArabicAsComunity client:visible />
      <OurTeam client:visible />
    </div>
  </div>
  <MarqueeStrip />
  <FAQs client:load />
  <ExperienceAralects client:visible />
</Layout>
